<div class="header" {{#if @blog.cover}}style="background-image: url({{@blog.cover}}); background-position:top center; background-size:cover"{{/if}}>
{{! Top Bar }}
<div class="topbar">
<div class="row multicol collapse">
<div class="small-12 columns">
  <div class="social">
    <ul>
      <li><a href="https://www.facebook.com/startarenews" title="facebook" target="_blank"><i class="fa fa-facebook fa-2x"></i></a></li>
      <li><a href="https://twitter.com/StartareNews" title="twitter" target="_blank"><i class="fa fa-twitter fa-2x"></i></a></li>
    </ul>
  </div>
</div>
</div>
</div>


<div class="row">
<div class="small-12 columns">
    {{#if @blog.logo}}
    <div class="logo"><h1><a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}"/></a></h1></div>
    {{else}}
    <div class="logotxt"><h1><a href="{{@blog.url}}">{{@blog.title}}</a></h1></div>
    {{/if}}
    {{#if @blog.description}}  
    <div class="motto">{{@blog.description}}</div> 
    {{/if}}    
</div>
</div>

</div>

